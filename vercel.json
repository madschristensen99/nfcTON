{
  "version": 2,
  "name": "hoodie-nfc-tg",
  "functions": {
    "packages/api/index.ts": {
      "runtime": "nodejs18.x"
    },
    "packages/bot/src/bot.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/packages/api/index.ts"
    },
    {
      "src": "/bot/(.*)",
      "dest": "/packages/bot/src/bot.ts"
    },
    {
      "src": "/static/(.*)",
      "dest": "/packages/bot/static/$1"
    },
    {
      "src": "/admin",
      "dest": "/packages/bot/static/admin.html"
    },
    {
      "src": "/viewer",
      "dest": "/packages/bot/static/viewer.html"
    },
    {
      "src": "/consumer",
      "dest": "/packages/bot/static/consumer.html"
    },
    {
      "src": "/",
      "dest": "/packages/bot/static/consumer.html"
    }
  ],
  "env": {
    "TG_BOT_TOKEN": "@tg_bot_token",
    "DATABASE_URL": "@database_url",
    "BOT_DOMAIN": "@bot_domain",
    "NODE_ENV": "production"
  }
}