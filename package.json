    "postgres": "^3.4.4",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "express": "^4.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.16.12",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.6.3",
    "tsx": "^4.19.1",
    "concurrently": "^9.0.1",
    "vercel": "^37.6.1"
  },
  "workspaces": [
    "packages/*"
